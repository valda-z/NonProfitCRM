@model IQueryable<NonProfitCRM.Models.ViewUserProfileList>
@{
    ViewBag.PreTitle = "list of";
    ViewBag.Title = "Users";
}

<section class="widget">
    <header>
        <h4>
            @Html.ActionLink("Create New", "UserDetail", "Account", new { id = 0, returnUrl = Request.RawUrl }, new { @class = "btn-sm btn-success" })
        </h4>
        <div class="widget-controls">
            @using (Html.BeginForm(null, null, FormMethod.Get))
            {
                <div class="width-200">
                    <div class="input-group input-group-sm input-group-transparent input-group-rounded">
                        <input type="search" name="search" value="@Request.QueryString["search"]" class="form-control" placeholder="Search users">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">&nbsp;&nbsp;&nbsp;Go!</button>
                        </span>
                    </div>
                </div>
            }
        </div>

    </header>
    <div class="widget-body">
        @{
            var grid = new NonProfitCRM.Components.ASWebGrid(Model);
        }
        @grid.Draw(columns: grid.Columns(
        grid.Column("UserName","User Name", format: @<text>@Html.ActionLink((string)item.UserName,
                "UserDetail", "Account", new { id = item.UserId, returnUrl = Request.RawUrl }, null)</text>),
            grid.Column("LastName", "Last Name", style: "hidden-xs hidden-sm"),
            grid.Column("FirstName", "First Name", style: "hidden-xs hidden-sm"),
            grid.Column("GroupName", "Group"),
            grid.Column("Deleted", "Status",format: @<text>@{if(item.Deleted){<span class="label label-danger">Deleted</span>}}</text>)
                      ))
    </div>
</section>

